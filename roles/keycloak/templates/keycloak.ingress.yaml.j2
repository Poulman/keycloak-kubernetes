apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: dave-authentication
  labels:
    app: dave
    layer: auth
    project: dave
  namespace: {{ namespace }}
  annotations:
    kubernetes.io/ingress.class: "nginx"
    ingress.kubernetes.io/enable-cors: "true"
    external-dns.alpha.kubernetes.io/hostname: {{ keycloak_dns }}.
spec:
  tls:
  - hosts:
    - {{ keycloak_dns }}
    secretName: dave-authentication
  rules:
  - host: auth.dave.dbg-devops.com
    http:
      paths:
      - backend:
          serviceName: dave-authentication
          servicePort: 80
